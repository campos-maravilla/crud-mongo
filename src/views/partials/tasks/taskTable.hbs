{{#if tasks}}

<table class="table table-bordered table-hover table-dark">
    <thead>
        <tr>
            <th>N°</th>
            <th>Titulo</th>
            <th>Descripción</th>
            <th>
                Acciones
            </th>
        </tr>
    </thead>
    <tbody>
        {{# each tasks}}
        <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
                {{#if done}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-warning ">Undone</a>
                {{else}}
                <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Done</a>
                {{/if}}

                <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
                <a href="/tasks/{{_id}}/edit" class="btn btn-info">Update</a>
            </td>
        </tr>


        {{/each}}

    </tbody>
</table>

{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white  my-3">
        <h1>No hay tareas</h1>
        <img src="/icons/empty.svg" alt="" class="w-75">
    </div>
</div>
{{/if}}